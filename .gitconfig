[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
[user]
  email = niklas.haag@yahoo.de
  name = Niklas Haag
[core]
  editor = nvim
  excludesfile = /Users/niklashaag/.gitignore_global
[credential]
  credentialStore = keychain
	helper =
	helper = /usr/local/share/gcm-core/git-credential-manager
[init]
  defaultBranch = main
[diff]
  tool = difftastic
  submodule = log
[status]
  submodulesummary = 1
[pull]
  rebase = true
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  difftool = true
[maintenance]
  repo = /Users/niklashaag/code/kerith/webapp
[credential "https://dev.azure.com"]
	useHttpPath = true
